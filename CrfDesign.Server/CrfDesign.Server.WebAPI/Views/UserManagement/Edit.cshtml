@model CrfDesign.Server.WebAPI.Models.LoginModels.EditUserRolesViewModel

<h2>Edit Roles for @Model.Email</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserId" />

    <div>
        <strong>@Model.FirstName @Model.LastName</strong>
    </div>

    <ul>
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <li>
                <input type="checkbox" asp-for="Roles[i].IsSelected" />
                <label>@Model.Roles[i].RoleName</label>
                <input type="hidden" asp-for="Roles[i].RoleName" />
            </li>
        }
    </ul>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
