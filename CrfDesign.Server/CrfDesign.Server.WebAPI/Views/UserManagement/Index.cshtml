@model List<Investigator>

<h2>All Users</h2>

<p>
    <a asp-action="LoadRoles">Seed Roles</a> |
    <a asp-action="Index" asp-controller="Investigators">Manage Data</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Full Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName @user.LastName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id">Edit Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
